{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/onetv\\.m3u", "dest": "/api/onetv.js" },
    { "src": "/([^/]+)\\.m3u8", "dest": "/api/channel?channel=$1" },
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ]
}
