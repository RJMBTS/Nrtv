{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/", "dest": "/index.html" }
  ],
  "rewrites": [
    {
      "source": "/onetv.m3u",
      "destination": "/api/onetv"
    },
    {
      "source": "/api/m3u8",
      "destination": "/api/m3u8.js"
    }
  ]
}
